generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email         String   @id
  username      String
  password_hash String
  role          String   @default("user")
  avatar_url    String?
  member_since  String
  bio           String?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("users")
}

model Game {
  id          String   @id @default(cuid())
  name        String
  description String
  download_link String?
  experience_link String?
  image_url   String?
  banner_url  String?
  avatar_url  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("games")
}
